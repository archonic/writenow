<%= form_with(
  model: document,
  html: {
    "data-controller": "tiptap--editor",
    class: "flex flex-col gap-5 h-full"
  }) do |form| %>
  <% if document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>
      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Name" %>
    <%= form.text_field :name,
      placeholder: "Name",
      class: "appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
  </div>

  <% if form.object.persisted? %>
    <div>
      <%= form.label :slug, "Slug" %>
      <%= form.text_field :slug,
        placeholder: "slug",
        class: "appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
  <% end %>

  <div>
    <%= render RubyUI::Button.new(type: "button", variant: "primary", data_action: "tiptap--editor#submit") do
      form.object.persisted? ? "Update document" : "Create document"
    end %>
  </div>

  <div class="flex flex-col">
    <%= form.hidden_field :body, id: form.field_id(:body), "data-tiptap--editor-target": "bodyInput" %>
    <%= form.hidden_field :token, id: form.field_id(:token), "data-tiptap--editor-target": "tokenField" %>

    <%= render Tiptap::Toolbar.new %>
    <div data-tiptap--editor-target="tiptap" class="border-1 border-gray-300 border-t-0 rounded-b-md"></div>
  </div>
<% end %>
